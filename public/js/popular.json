{
  "$schema": "https://vega.github.io/schema/vega/v3.json",
  "width": 200,
  "height": 200,

  "data": [
    {
      "name": "men_majors",
      "url": "https://raw.githubusercontent.com/thomas-schweich/hci-dfu/master/public/assets/recent-grads.csv",
      "format": {"type": "csv"},
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["Major_category"],
          "fields": ["Men", "Men"],
          "ops": ["mean", "count"],
          "as": ["Men_mean", "majors"]
        },
        {
          "type": "formula",
          "expr": "datum.Men_mean * datum.majors",
          "as": "Men_totals"
        },
        {
          "type": "pie",
          "field": "Men_totals"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "range": {"scheme": "category20b"}
    }
  ],

  "marks": [
    {
      "type": "arc",
      "from": {"data": "men_majors"},
      "encode": {
        "enter": {
          "x": {"field": {"group": "width"}, "mult": 0.5},
          "y": {"field": {"group": "height"}, "mult": 0.5},
          "startAngle": {"field": "startAngle"},
          "endAngle": {"field": "endAngle"},
          "innerRadius": {"value": 0},
          "outerRadius": {"value": 80},
          "fill": {"scale": "color", "field": "Major_category"},
          "tooltip": {"field": "Men_totals","type": "quantitative"}
        }
      }
    }
  ],
  "legends": [
  {
    "fill": "color",
    "encode": {
      "title": {
        "update": {
          "fontSize": {"value": 14}
        }
      },
      "symbols": {
        "update": {
          "stroke": {"value": "transparent"}
        }
      },
      "legend": {
        "update": {
          "stroke": {"value": "#ccc"},
          "strokeWidth": {"value": 1.5}
        }
      }
    }
  }
]
}